<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".GalleryFragment">


    <smartAmigos.com.nammakarnataka.myTextView
        android:id="@+id/gallery_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:textColor="#ffffff"
        android:textSize="28sp" />

    <ListView
        android:divider="@null"
        android:id="@+id/galleryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gallery_name" />


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/NKbannerAds"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9681985190789334/7802420608"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>



