<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/profileBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".myProfile"
    tools:showIn="@layout/activity_my_profile">

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:textColor="#ffffff"
        android:textSize="32sp" />



    <LinearLayout
        android:layout_below="@+id/profileTitle"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="POINTS"
                android:textColor="#d50000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profilePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#d50000"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Temples"
                android:textColor="#d50000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileTemples"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#d50000"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Hillstations"
                android:textColor="#d50000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileHillstations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#d50000"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Waterfalls"
                android:textColor="#d50000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileWaterfalls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#d50000"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Dams"
                android:textColor="#d50000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileDams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#d50000"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Trekkings"
                android:textColor="#d50000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileTrekking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#d50000"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Beaches"
                android:textColor="#d50000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileBeaches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#d50000"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Heritage"
                android:textColor="#d50000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileHeritage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#d50000"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Others"
                android:textColor="#d50000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileOthers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#d50000"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>





</RelativeLayout>