<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_image"
    tools:context="avinashks.justmailtoavi.com.nammakarnataka.templesFragment">


        <pttextview.widget.PTTextView
            android:id="@+id/p1"
            android:padding="15dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="Temples"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            app:textWeight="bold"
            app:typeface="pt_serif_bold_italic"
            />


        <ListView
            android:layout_below="@+id/p1"
            android:id="@+id/templeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




</RelativeLayout>



