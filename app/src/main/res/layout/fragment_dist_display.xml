<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="smartAmigos.smartAmigos.com.nammakarnataka.distDisplayFragment">


    <pttextview.widget.PTTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/current_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:textColor="#000000"
        android:textSize="25sp"
        app:textWeight="bold"
        app:typeface="pt_serif_bold_italic" />

        <ListView
            android:layout_below="@+id/current_dist"
            android:id="@+id/distCurrentList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />



</RelativeLayout>
